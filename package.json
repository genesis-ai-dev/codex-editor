{
    "name": "codex-editor-extension",
    "displayName": "Codex Translation Editor",
    "description": "Support for `.codex` notebooks and translation source files. Includes Codex Language Server for translation drafting and checking diagnostics and features.",
    "publisher": "project-accelerate",
    "homepage": "https://codex-editor.gitbook.io/",
    "repository": {
        "type": "git",
        "url": "https://github.com/genesis-ai-dev/codex-editor"
    },
    "license": "MIT",
    "version": "0.6.22",
    "engines": {
        "node": ">=18.0.0",
        "vscode": "^1.78.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCustomEditor:newSourceUploaderProvider-scheme",
        "onCustomEditor:startupFlowProvider-scheme",
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "permissions": [
        "readFile"
    ],
    "contributes": {
        "keybindings": [],
        "views": {
            "codex-main-menu": [
                {
                    "type": "webview",
                    "id": "codex-editor.mainMenu",
                    "name": "Project Settings",
                    "icon": "$(list-tree)",
                    "contextualTitle": "Codex Project Settings"
                }
            ],
            "automated-testing-view": [
                {
                    "type": "webview",
                    "id": "codex-editor.automatedTesting",
                    "name": "Automated Testing",
                    "icon": "$(beaker)",
                    "contextualTitle": "Automated Testing"
                }
            ],
            "search-passages-view": [
                {
                    "type": "webview",
                    "id": "search-passages-sidebar",
                    "name": "Search Passages",
                    "icon": "$(eye)",
                    "contextualTitle": "Search Passages"
                }
            ],
            "codex-files-view": [
                {
                    "type": "webview",
                    "id": "codex-editor.navigation",
                    "name": "Navigation",
                    "icon": "$(compass)",
                    "contextualTitle": "Navigation"
                }
            ],
            "comments-sidebar-view": [
                {
                    "type": "webview",
                    "id": "comments-sidebar",
                    "name": "Comments",
                    "icon": "$(note)",
                    "contextualTitle": "Comments"
                }
            ],
            "explorer": [
                {
                    "id": "codex-project-manager.welcomeView",
                    "name": "Codex Project Manager",
                    "when": "workbenchState == empty"
                },
                {
                    "type": "webview",
                    "id": "codex-editor.editAnalysis",
                    "name": "AI Metrics"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "codex-main-menu",
                    "title": "Codex Main Menu",
                    "icon": "$(list-tree)"
                },
                {
                    "id": "automated-testing-view",
                    "title": "Automated Testing",
                    "icon": "$(beaker)"
                },
                {
                    "id": "codex-files-view",
                    "title": "Navigation",
                    "icon": "$(compass)"
                },
                {
                    "id": "search-passages-view",
                    "title": "Search Passages",
                    "icon": "$(eye)"
                },
                {
                    "id": "comments-sidebar-view",
                    "title": "Comments",
                    "icon": "$(note)"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "dictionaryTable.showDictionaryTable",
                    "when": "view == dictionaryTable",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "dictionaryTable.showDictionaryTable",
                    "when": "view == dictionaryTable",
                    "group": "navigation"
                }
            ],
            "editor/title": [
                {
                    "command": "codex-editor-extension.scm.stageAndCommitAll",
                    "group": "navigation"
                }
            ],
            "commandPalette": [
                {
                    "command": "codex-editor-extension.getFileStats",
                    "title": "Codex Extension: Show File Statistics"
                }
            ]
        },
        "commands": [
            {
                "command": "codex-editor-extension.submitProgressReport",
                "title": "Submit Progress Report",
                "category": "Codex Editor"
            },
            {
                "command": "codex-editor.testProjectLoadingPerformance",
                "title": "Test Project Loading Performance",
                "category": "Codex Debug"
            },
            {
                "command": "codex-editor.migrateAudioFiles",
                "title": "Migrate Audio Files (.x-m4a to .m4a)",
