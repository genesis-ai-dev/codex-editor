        "configuration": [
            {
                "title": "Codex Project Manager",
                "properties": {
                    "codex-project-manager.lineNumbersMigrationCompleted": {
                        "type": "boolean",
                        "default": false,
                        "description": "Internal flag indicating the line numbers migration has completed."
                    },
                    "codex-project-manager.projectName": {
                        "type": "string",
                        "default": "",
                        "description": "Name of the project"
                    },
                    "codex-project-manager.validationCount": {
                        "type": "integer",
                        "default": 1,
                        "description": "Number of required validations for each translation",
                        "minimum": 1,
                        "maximum": 15
                    },
                    "codex-project-manager.validationCountAudio": {
                        "type": "integer",
                        "default": 1,
                        "description": "Number of required validations for each audio translation",
                        "minimum": 1,
                        "maximum": 15
                    },
                    "codex-project-manager.userName": {
                        "type": "string",
                        "default": "",
                        "description": "Name of the user"
                    },
                    "codex-project-manager.userEmail": {
                        "type": "string",
                        "default": "",
                        "description": "Email of the user e.g. user@example.com"
                    },
                    "codex-project-manager.abbreviation": {
                        "type": "string",
                        "default": "",
                        "description": "Project abbreviation"
                    },
                    "codex-project-manager.sourceLanguage": {
                        "type": "object",
                        "default": {},
                        "description": "Source language for the project",
                        "properties": {
                            "tag": {
                                "type": "string"
                            },
                            "refName": {
                                "type": "string"
                            },
                            "projectStatus": {
                                "type": "string"
                            }
                        }
                    },
                    "codex-project-manager.targetLanguage": {
                        "type": "object",
                        "default": {},
                        "description": "Target language for the project",
                        "properties": {
                            "tag": {
                                "type": "string"
                            },
                            "refName": {
                                "type": "string"
                            },
                            "projectStatus": {
                                "type": "string"
                            }
                        }
                    },
                    "codex-project-manager.primarySourceText": {
                        "type": "string",
                        "default": "",
                        "description": "Path to the primary source text for the project"
                    },
                    "codex-project-manager.knownProjects": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "default": [],
                        "description": "List of known Codex project paths"
                    },
                    "codex-project-manager.watchedFolders": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "default": [],
                        "description": "List of folders to watch for Codex projects"
                    },
                    "codex-project-manager.projectHistory": {
                        "type": "object",
                        "default": {},
                        "description": "History of project access times",
                        "additionalProperties": {
                            "type": "string"
                        }
                    },
                    "codex-project-manager.spellcheckIsEnabled": {
                        "type": "boolean",
                        "default": false,
                        "description": "Enable or disable spellcheck for the project"
                    },
                    "codex-project-manager.autoSyncEnabled": {
                        "type": "boolean",
                        "default": true,
                        "description": "Enable automatic synchronization of changes to remote repository"
                    },
                    "codex-project-manager.syncDelayMinutes": {
                        "type": "number",
                        "enum": [
                            5,
                            15,
                            30,
                            60
                        ],
                        "default": 5,
                        "description": "Delay in minutes before triggering automatic sync after changes"
                    }
                }
            },
            {
                "title": "Codex Editor: Cloud Sync",
                "properties": {
                    "codex-editor-extension.scm.remoteUrl": {
                        "type": "string",
                        "default": "",
                        "description": "The remote URL to cloud sync to."
                    },
                    "codex-editor-extension.scm.autoCommit": {
                        "type": "boolean",
                        "default": true,
                        "description": "Enable or disable auto-commit feature."
                    },
                    "codex-editor-extension.scm.autoSyncInterval": {
                        "type": "string",
                        "enum": [
                            "Do not auto sync",
                            "Every 1 minute",
                            "Every 5 minutes",
                            "Every 15 minutes",
                            "Every hour",
                            "Every day"
                        ],
                        "default": "Do not auto sync",
                        "description": "Automatically Sync to Cloud every..."
                    }
                }
            },
            {
                "title": "Codex Extension Server",
                "properties": {
                    "codex-editor-extension-server.enable": {
                        "type": "boolean",
                        "default": true,
                        "description": "Enable or disable the Codex Extension feature."
                    },
                    "codex-editor-extension-server.primarySourceText": {
                        "type": "string",
                        "default": "",
                        "description": "The source text to use for the Codex Extension feature."
                    }
                }
            },
